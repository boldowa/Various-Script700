01 04 7f 0017       ; 0008: menu(3) / 0.17秒
01 04 7f 0030       ; 0009: menu(3) / 0.30秒
01 04 7f 0020       ; 000a: menu(3) / 0.20秒
89 00 0f 0000       ; 000b: set command [ 00h = #0fh ]  ;\ 
